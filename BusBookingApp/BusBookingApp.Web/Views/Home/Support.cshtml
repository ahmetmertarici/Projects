@model SupportModel


<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration border border-5" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">SUPPORT FORM</h3>
                        <form asp-controller="Home" asp-action="Support" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">First Name</label>
                                        <input asp-for="FirstName" type="text" class="form-control form-control-md" />
                                    </div>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Last Name</label>
                                        <input asp-for="LastName" type="text" class="form-control form-control-md" />
                                    </div>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Phone Number</label>
                                        <input asp-for="PhoneNumber" type="text" class="form-control form-control-md" />
                                    </div>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Email</label>
                                        <input asp-for="Email" type="email" class="form-control form-control-md" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div>
                                    <div class="form-outline">
                                        <label class="form-label">Topic</label>
                                        <input asp-for="Topic" type="text" class="form-control form-control-md" />
                                    </div>
                                    <span asp-validation-for="Topic" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-outline col mb-4">
                                    <label class="form-label">Comments</label>
                                    <textarea asp-for="Text" class="form-control"></textarea>
                                </div>
                                <span asp-validation-for="Text" class="text-danger"></span>
                            </div>


                            <div class="mt-4 pt-2 text-center">
                                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>