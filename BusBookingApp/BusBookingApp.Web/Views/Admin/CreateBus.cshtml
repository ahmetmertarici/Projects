@model CreateBusModel

<h5 class="display-4 container">Create Bus</h5>
<hr />
<form asp-controller="Admin" asp-action="CreateBus" method="post" >
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row mb-2">
                <label  class="col-form-label col-sm-3">Bus Seat Capacity</label>
                <div class="col-sm-9">
                    <input type="number" name="BusSeatCapacity" class="form-control"/>
                </div>
                <span asp-validation-for="BusSeatCapacity" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2 mt-3 offset-3">
                <div class="col-sm-3">
                    <button type="submit" class="btn btn-primary">Save Bus</button>
                    <button asp-controller="Admin" asp-action="ListBuses" type="submit" class="btn btn-warning">Back</button>
                </div>
            </div>
        </div>
    </div>
</form>
