@model CreateContactModel

<h5 class="display-4 container">Create Contact</h5>
<hr />
<form asp-controller="Admin" asp-action="CreateContact" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Branch Name:</label>
                <div class="col-sm-9">
                    <input asp-for="BranchName" type="text" class="form-control" />
                </div>
                <span asp-validation-for="BranchName" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Branch Phone:</label>
                <div class="col-sm-9">
                    <input asp-for="BranchPhone" type="text" class="form-control" />
                </div>
                <span asp-validation-for="BranchPhone" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Branch Address</label>
                <div class="col-sm-9">
                    <input asp-for="BranchAddress" type="text" class="form-control" />
                </div>
                <span asp-validation-for="BranchAddress" class="text-danger"></span>
            </div>
           
            <div class="form-group row mb-2 mt-3 offset-3">
                <div class="col-sm-3">
                    <button type="submit" class="btn btn-primary">Save Contact</button>
                    <button asp-controller="Admin" asp-action="ContactList" type="submit" class="btn btn-warning">Back</button>
                </div>
            </div>
        </div>
    </div>
</form>


