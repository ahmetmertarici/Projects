@using BusBookingApp.Entity

@model List<Support>

@section Styles{
    @await Html.PartialAsync("_DataTablesCssPartial")
}
    @section Scripts{
    @await Html.PartialAsync("_DataTablesScriptsPartial")
}

    <div class="container mt-4">
        <div class="col-sm-12">
            <h3>Support List</h3>
            <hr />

            <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="ShowUnreadMessages">Show Unread Messages</a>
            <br />
            <br />
            <table class="table table table-bordered shadow-sm mt-3" id="myTable">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Topic</th>
                        <th>Text</th>
                        <th>Answer</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Topic</td>
                        <td>@item.Text</td>
                        <td>@item.Answer</td>
                        <td>
                            <a asp-controller="Admin" asp-action="AnswerSupport" asp-route-id="@item.SupportId" class="btn btn-sm btn-primary">Answer</a>

                            <!-- Button trigger DeleteModal -->
                            <button type="button" asp-route-id=@item.SupportId class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal_@item.SupportId">
                                Delete
                            </button>
                            <!-- DeleteModal -->
                            <div class="modal fade" id="DeleteModal_@item.SupportId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Warning!</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p class="text-danger">This contact will be deleted!</p>
                                            <p>Are you sure?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                            <a asp-controller="Admin"
                                           asp-action="DeleteSupport"
                                           asp-route-id="@item.SupportId"
                                           class="btn btn-danger">Yes</a>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
